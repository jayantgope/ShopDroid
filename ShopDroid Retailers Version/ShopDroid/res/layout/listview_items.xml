<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1" >
        <TextView
            android:id="@+id/tvDisplayProdCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#22000000"
            android:layout_weight="0.2"
            android:padding="3dp"
            android:ellipsize="end"
			android:singleLine="true"
            android:text="Prod. code"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/tvDisplayProdName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:padding="3dp"
            android:text="Product name"
            android:ellipsize="end"
			android:singleLine="true"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/tvDisplayCategory"
            android:layout_width="0dp"
            android:background="#22000000"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:padding="3dp"
            android:ellipsize="end"
			android:singleLine="true"
            android:text="Category"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/tvDisplayUnitCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:padding="3dp"
            android:ellipsize="end"
			android:singleLine="true"
            android:text="U.cost"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/tvDisplayStock"
            android:layout_width="0dp"
            android:background="#22000000"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:padding="3dp"
            android:ellipsize="end"
			android:singleLine="true"
            android:text="Stock"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
</LinearLayout>