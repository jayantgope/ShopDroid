<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_blue">
    <TextView
        android:layout_height="28dp"
        android:layout_width="match_parent"
        android:background="@color/subtitle_bground"
        android:text=" NEAREST SHOPS"
        android:textColor="@color/subtitle_fground"
       	android:gravity="center"
        android:textSize="20dp" />
    <LinearLayout
        android:id="@+id/llProductListTitle" 
        android:background="@color/list_title_bground"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="1.0">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:padding="3dp"
            android:text="Shop Name"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.6"
            android:background="@color/list_title_bground"
            android:padding="3dp"
            android:text="Address"
            android:textColor="@color/list_title_fground"
            android:textSize="16dp" />
    </LinearLayout>
     <ListView
        android:id="@+id/lvNearestShops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#0000" />
    
</LinearLayout>
